{
    "name": "buddypress/buddypress-followers",
    "description": "Follow members on your BuddyPress site - modern implementation",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=8.0",
        "composer/installers": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "BuddyPress\\Followers\\": "includes/classes/"
        },
        "files": [
            "includes/functions/core-functions.php"
        ]
    },
    "scripts": {
        "lint": "phpcs",
        "lint-fix": "phpcbf",
        "test": "phpunit"
    }
}